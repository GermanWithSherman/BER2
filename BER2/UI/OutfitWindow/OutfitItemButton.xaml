<UserControl x:Class="BER2.UI.OutfitWindow.OutfitItemButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BER2.UI.OutfitWindow"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Button Click="Button_Click">
        <StackPanel>
            <TextBlock x:Name="TextTitle" FontWeight="Bold" FontSize="26" HorizontalAlignment="Center">Body</TextBlock>
            <Image x:Name="Image" MaxHeight="300" MaxWidth="300" Source="https://docs.microsoft.com/_themes/docs.theme/master/de-de/_themes/styles/microsoft-logo-light.c77142eb.png"></Image>
            <TextBlock x:Name="TextName" FontSize="20" HorizontalAlignment="Center">Dress 1</TextBlock>
        </StackPanel>
    </Button>
</UserControl>
