<UserControl x:Class="BER2.UI.GameWindow.Statusbar.Statusbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BER2.UI.GameWindow.Statusbar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center">
            <Label Content="Time:"/>
            <Label x:Name="StatusTime" Content="00:00:00 01.01.1970"/>
            <Label Content="Hunger:" Margin="10,0,0,0"/>
            <Label x:Name="StatusHunger" Content="100%"/>
            <Label Content="Sleep:" Margin="10,0,0,0"/>
            <Label x:Name="StatusSleep" Content="100%"/>
            <Label Content="Distress:" Margin="10,0,0,0"/>
            <Label x:Name="StatusDistress" Content="0%"/>
            <StackPanel x:Name="EffectIconContainer" Orientation="Horizontal"></StackPanel>
        <Button x:Name="ButtonCharacter" Content="Character" Click="ButtonCharacter_Click"></Button>
    </StackPanel>
    
</UserControl>
