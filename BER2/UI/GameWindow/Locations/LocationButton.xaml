<UserControl x:Class="BER2.UI.GameWindow.Locations.LocationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BER2.UI.GameWindow.Locations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button x:Name="Button">
        <StackPanel>
            <Image x:Name="Image" Source="https://docs.microsoft.com/_themes/docs.theme/master/de-de/_themes/styles/microsoft-logo-light.c77142eb.png" Width="100" />
            <TextBlock x:Name="TextDestinationLabel" HorizontalAlignment="Center">Test</TextBlock>
            <TextBlock x:Name="TextDuration" HorizontalAlignment="Center" FontSize="8">(3 Minutes)</TextBlock>
        </StackPanel>
    </Button>
</UserControl>
