<UserControl x:Class="BER2.UI.Shopwindow.ShopWindowItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BER2.UI.Shopwindow"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120">
    <Button x:Name="Button" Click="Button_Click">
        <Button.Content>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="TextLabel" Width="100" Text="Label" HorizontalAlignment="Center" TextAlignment="Center"/>
                <Image x:Name="Texture" Height="100" Width="100"></Image>
            </StackPanel>
        </Button.Content>
        <Button.ToolTip>
            <StackPanel>
                <TextBlock x:Name="TextPrice"></TextBlock>
            </StackPanel>
        </Button.ToolTip>
    </Button>
</UserControl>
